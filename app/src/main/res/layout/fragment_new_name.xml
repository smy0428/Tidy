<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">
    <EditText
        android:id="@+id/new_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/confirm_button"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:typeface="serif"
        android:gravity="center"
        android:hint="new name for your family">
    </EditText>
    <ImageView
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/new_name"
        app:layout_constraintBottom_toBottomOf="@id/new_name"
        app:layout_constraintStart_toEndOf="@id/new_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_plus_60dp"
        android:contentDescription="confirm button">
    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>